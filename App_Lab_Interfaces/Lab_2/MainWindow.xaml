<Window x:Class="App_Lab_Interfaces.Lab_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App_Lab_Interfaces.Lab_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <!-- Стиль для Label -->
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="26"/>
        </Style>

        <!-- Стиль для TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="26"/>
        </Style>

        <!-- Стиль для Button -->
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="26"/>
        </Style>
    </Window.Resources>

    
    <DockPanel LastChildFill="False">
        
        <TextBox DockPanel.Dock="Left" Height="250" Width="250" Margin="10" Text="Text" TextChanged="TextBox_TextChanged"/>
        <StackPanel>
            <Label Content="Мітка" HorizontalAlignment="Center" Margin="5"/>
            <Button Margin="25 150" Width="200" Height="40"  Content="Кнопка" />
        </StackPanel>
        <TextBox DockPanel.Dock="Right" Height="250" Width="250" Margin="10" Text="Text" TextChanged="TextBox_TextChanged"/>
    </DockPanel>
</Window>
